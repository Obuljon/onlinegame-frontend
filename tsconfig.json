{
    "compilerOptions": {
        "lib": ["DOM", "ES2022"],
        "moduleResolution": "node",
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": ["src", "custom.d.ts"]
}

